#include<iostream>
using namespace std;


int main(){

       /*  Read input as specified in the question.
	* Print output as specified in the question.
	*/
    int n,val=1;
    cin>>n;
    
    for(int i=0;i<n;i++)
    {
        int j=0;
    	while(j<=n-i-2)
        {
            cout<<" ";
            j++;
        }
        while(j!=n-1)
        {
            cout<<val;
            val++;
            j++;
        }
        val--;
        cout<<endl;
    }
  
}
